<h2>Корректировать комментарий</h2>

<% form_for(@comment) do |f| %>

<p>
	<%= f.label :Имя %>
	<%= f.text_field :name %>
</p>

<p>
	<%= f.label :email %>
	<%= f.text_field :email %>
</p>
<p>
	<%= f.label :web_site %>
	<%= f.text_field :web_site %>
</p>
<p>
	<%= f.label :комментарий %><br />
	<%= f.text_area :body %>
</p>
<p>
	<%= f.submit "Обновить" %>
</p>
<% end %>

